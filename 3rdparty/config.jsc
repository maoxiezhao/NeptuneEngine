// 3rdparty building config
{
    ///////////////////////////////////////////////////////////////////
    // common definitions
    jcs_def :
    {
        cjing_build_dir : "../tools/cjing_build",
    },

    ///////////////////////////////////////////////////////////////////
    // platform tools
    tools<Windows>: 
    {
        type : tools,
        jsc: "py -3 ${cjing_build_dir}/scripts/jsc.py",
        premake: "${cjing_build_dir}/bin/win32/premake5.exe",
    },

    ///////////////////////////////////////////////////////////////////
    // platform:win32
    //////////////////////////////////////////////////////////////////
    // glfw
    glfw-win32 :
    {
        // clean
        clean : {
            type: clean,
            directories : [
                "glfw/build/win32",
                "glfw/bin/win32"
            ]
        },

        premake : {
            args : [
                "%{vs_version}",   // To genenrate vs sln, the first param must is "vs_version"
                "--env_dir=../",
                "--platform_dir=win32",
                "--sdk_version=%{windows_sdk_version}",
                "--file=glfw/premake5.lua"
            ]
        },
        build : {
            buildtool: "msbuild",
            files : [
                "glfw/build/win32/glfw_sln.sln"
            ]       
        },
    }
}